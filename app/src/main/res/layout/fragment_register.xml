<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/etxt_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="@string/login_hint_example"
        android:inputType="textCapCharacters|textMultiLine"
        android:maxLines="5"
        android:paddingBottom="@dimen/small_padding"
        android:paddingLeft="@dimen/large_padding"
        android:paddingRight="@dimen/large_padding"
        android:paddingTop="@dimen/small_padding"
        android:theme="@style/TitleText"/>

    <EditText
        android:id="@+id/etxt_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="@string/password_hint_example"
        android:inputType="textPassword"
        android:maxLines="5"
        android:paddingBottom="@dimen/small_padding"
        android:paddingLeft="@dimen/large_padding"
        android:paddingRight="@dimen/large_padding"
        android:paddingTop="@dimen/small_padding"
        android:theme="@style/TitleText" />

    <EditText
        android:id="@+id/etxt_password_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="@string/password_confirm_hint_example"
        android:inputType="textPassword"
        android:maxLines="5"
        android:paddingBottom="@dimen/small_padding"
        android:paddingLeft="@dimen/large_padding"
        android:paddingRight="@dimen/large_padding"
        android:paddingTop="@dimen/small_padding"
        android:theme="@style/TitleText" />
    <!--ЗАМЕНИТЬ НА КНОПКУ!-->
    <TextView
        android:id="@+id/txt_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="right"
        android:paddingBottom="@dimen/small_padding"
        android:paddingLeft="@dimen/large_padding"
        android:paddingRight="@dimen/large_padding"
        android:paddingTop="@dimen/small_padding"
        android:text="@string/done"
        android:textColor="@color/black"
        android:textSize="@dimen/normal_txt_size" />

</LinearLayout>