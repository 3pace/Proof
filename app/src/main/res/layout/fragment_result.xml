<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:theme="@style/FragmentBackground"
    tools:context="com.proof.ly.space.proof.Fragments.StartFragment">

    <include layout="@layout/toolbar"/>
    <LinearLayout
        android:id="@+id/linear_layout_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/background_color"
        android:orientation="vertical"
        android:paddingBottom="@dimen/small_padding"
        android:paddingLeft="@dimen/large_padding"
        android:paddingRight="@dimen/large_padding"
        android:paddingTop="@dimen/small_padding">

        <TextView
            android:id="@+id/txt_finish_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/result_test_title"
            android:theme="@style/TitleText" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_result_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/ResultPercentText" />

            <ImageView
                android:id="@+id/img_view_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/large_margin"
                android:visibility="invisible"
                app:srcCompat="@drawable/round_mood_black_36" />

        </LinearLayout>


        <TextView
            android:id="@+id/txt_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/result_test_title"
            android:theme="@style/TitleText" />

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/result_test_title"
            android:theme="@style/TitleText" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end|center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_padding"
            android:layout_marginTop="@dimen/small_padding"
            android:minWidth="1dp"
            android:textColor="@color/colorPrimaryDark"
            android:theme="@style/ButtonMenu" />

        <Button
            android:id="@+id/btn_restart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/normal_padding"
            android:layout_marginTop="@dimen/small_padding"
            android:text="@string/restart"
            android:textColor="@color/colorPrimaryDark"
            android:theme="@style/ButtonMenu" />


    </LinearLayout>
</LinearLayout>
