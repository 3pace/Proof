<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingBottom="@dimen/small_padding"
    android:paddingLeft="@dimen/large_padding"
    android:paddingRight="@dimen/large_padding"
    android:paddingTop="@dimen/small_padding"
    tools:context="com.proof.ly.space.proof.Fragments.StartFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_finish_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/result_test_title"
            android:theme="@style/TitleText" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_result_percent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/result_test_title"
                android:theme="@style/ResultPercentText" />

            <ImageView
                android:id="@+id/img_view_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/large_margin"
                android:visibility="invisible"
                app:srcCompat="@drawable/baseline_sentiment_very_satisfied_black_36" />

        </LinearLayout>


        <TextView
            android:id="@+id/txt_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/result_test_title"
            android:theme="@style/TitleText" />

        <Button
            android:id="@+id/btn_restart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="@dimen/small_padding"
            android:layout_marginLeft="@dimen/normal_padding"
            android:layout_marginRight="@dimen/normal_padding"
            android:layout_marginTop="@dimen/small_padding"
            android:text="@string/restart"
            android:textColor="@color/colorPrimaryDark"
            android:theme="@style/ButtonMenu" />
    </LinearLayout>
</LinearLayout>
